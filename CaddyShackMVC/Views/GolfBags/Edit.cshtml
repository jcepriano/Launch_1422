@model GolfBag

<h1>Edit a Golf Bag</h1>

<form method="post" action="/golfbags/@Model.Id">
    <div>
        <label for="player">Player:</label>
        <input type="text" id="player" name="player" value="@Model.Player"/>
    </div>
    <br />
    <div>
        <label for="capacity">Capacity:</label>
        <input type="number" id="capacity" name="capacity" value="@Model.Capacity" />
    </div>
    <br />
    <button type="submit">Update Golf Bag</button>
</form>